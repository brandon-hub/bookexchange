<h2>Books On Sell</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Vendor</th>
      <th>Buyer</th>
      <th>Subject</th>
      <th>Condition</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.vendor_id %></td>
        <td><%= book.buyer_id %></td>
        <td><%= book.subject_id %></td>
        <td><%= book.condition_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

